{
    "name": "ghostty-config",
    "version": "0.2.0",
    "description": "A beautiful config generator for Ghostty terminal.",
    "author": "Zerebos",
    "repository": {
        "type": "git",
        "url": "https://github.com/zerebos/ghostty-config"
    },
    "license": "Apache-2.0",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest",
        "lint": "eslint .",
        "format": "prettier --write . && eslint . --fix"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^7.0.1",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.53.0",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@types/bun": "^1.3.9",
        "@zerebos/eslint-config": "^1.0.2",
        "@zerebos/eslint-config-svelte": "^1.0.3",
        "@zerebos/eslint-config-typescript": "^1.0.3",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.15.0",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.5.0",
        "svelte": "^5.53.2",
        "svelte-check": "^4.4.3",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "type": "module",
    "dependencies": {
        "@fontsource-variable/inter": "^5.2.8"
    }
}
